<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    app:cardCornerRadius="4dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">
<ImageView
    android:id="@+id/syrinx_image"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:scaleType="centerCrop"
    android:transitionName="syrinxImage"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp">
            <TextView
                android:id="@+id/syrinx_name"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="20dp"/>
            <TextView
                android:id="@+id/syrinx_freePost"
                android:paddingLeft="3dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="20dp"
                android:textColor="@color/colorAccent"/>
        </LinearLayout>

        <LinearLayout
            android:paddingTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="型号："/>
                <TextView
                    android:id="@+id/syrinx_code"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:paddingLeft="3dp"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="种类："/>
                <TextView
                    android:id="@+id/syrinx_format"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:paddingTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="卖价："
                    android:textColor="@color/colorAccent"/>
                <TextView
                    android:id="@+id/syrinx_outPrice"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorAccent"/>
            </LinearLayout>

            <LinearLayout
                android:paddingLeft="2dp"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="进价："/>
                <TextView
                    android:id="@+id/syrinx_inPrice"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                android:paddingLeft="2dp"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="利润："
                    android:textColor="@color/colorAccent"/>
                <TextView
                    android:id="@+id/syrinx_interest"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorAccent"/>
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp">
            <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/addImg"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:visibility="invisible"/>
                <ImageView
                    android:id="@+id/reduceBtn"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/reduce"
                    android:layout_marginLeft="-25dp"
                    android:visibility="invisible"/>
                <!--提供视觉效果-->
                <ImageView
                    android:id="@+id/reduceView"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/reduce"
                    android:layout_marginLeft="-25dp"
                    android:visibility="invisible"/>
                <TextView
                    android:id="@+id/puchase_num"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:textSize="16sp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:textAlignment="gravity"/>
                    <ImageView
                        android:id="@+id/addBtn"
                        android:layout_gravity="right"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@mipmap/add"/>
                    <!--提供视觉效果-->
                    <ImageView
                        android:layout_gravity="right"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="-25dp"
                        android:src="@mipmap/add"/>
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
</android.support.v7.widget.CardView>
