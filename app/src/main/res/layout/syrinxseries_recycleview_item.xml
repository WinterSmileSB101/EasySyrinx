<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    app:cardCornerRadius="4dp">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/syrinxSeries_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:transitionName="seriesImage"/>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/syrinxSeries_image"
        android:orientation="vertical">
        <TextView
            android:paddingTop="3dp"
            android:id="@+id/syrinxSeries_name"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:textSize="20dp"
            android:textColor="@color/colorPrimary"
            android:background="#70FFFFFF"/>
        <LinearLayout
            android:paddingTop="3dp"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorAccent"
                    android:text="数量："/>
                <TextView
                    android:id="@+id/syrinxSeries_num"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorAccent"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:paddingTop="3dp"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorAccent"
                    android:text="包邮："/>
                <TextView
                    android:id="@+id/syrinxSeries_freePost"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorAccent"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
</android.support.v7.widget.CardView>
